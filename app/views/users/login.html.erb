<h1>Login</h1>
<div class="form_wrapper">	
	<%= form_for :user, :url => signin_path do |f| %>
		<div class="field">
			<%= f.label :login, "id:" %>
			<%= f.text_field :login, :class => "text", :autofocus => true %>
		</div>
		
		<div class="field">
			<%= f.label :password, "pw:" %>
			<%= f.password_field :password, :class => "text" %>
		</div>
		
		<div class="actions">
			<%= f.submit("login") %>
		</div>
	<% end %>
</div>

